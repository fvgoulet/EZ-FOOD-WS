                        tr
                            td ZIP Code *:
                            td
                                input(id='userZipCode',class='form-control', type='text', placeholder='ZIP Code', required autofocus, autocomplete="off")
                        tr
                            td
                                input#btnSubmitAccount(type="submit", value="Create Account", class="btn btn-lg btn-primary btn-block", disabled)
                            td
    include Footer

    script(src='/javascripts/validateAccountFields.js')
