extends layout
block content

    include Header

    div#content
        fieldset
            legend Account Creation
            div#mandatoy.warningCreateAccount Fields with an "*" are mandatory
            div#error.warningCreateAccount
            form(name="account", action="/createAccount/confirmAccount", method="post")
                if account
                    table
                        tr
                            td Username *:
                            td
                                input(id='username', type='text', placeholder='Username', value='#{username}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Password *:
                            td
                                input(id='userPassword', type='password', placeholder='Password', value='#{userPassword}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Confirm Password *:
                            td
                                input(id='confirmPassword', type='password', placeholder='Password',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td First Name *:
                            td
                                input(id='userFirstName', type='text', placeholder='First Name', value='#{userFirstName}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Last Name *:
                            td
                                input(id='userSecondName', type='text', placeholder='Last Name', value='#{userSecondName}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Birth Date *:
                            td
                                input(id='userBirthDate', type='text', placeholder='YYYY-MM-DD', value='#{userBirthDate}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Email *:
                            td
                                input(id='userEmail', type='text', placeholder='Email', value='#{userEmail}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Phone Number *:
                            td
                                input(id='userPhoneNumber', type='text', placeholder='###-###-####', value='#{userPhoneNumber}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Civic No. *:
                            td
                                input(id='userCivicNumber', type='text', placeholder='Civic No.', value='#{userCivicNumber}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Appartment :
                            td
                                input(id='userAppNumber', type='text', placeholder='App. No. (Optional)', value='#{userAppNumber}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Street *:
                            td
                                input(id='userStreet', type='text', placeholder='Street', value='#{userStreet}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td City *:
                            td
                                input(id='userCity', type='text', placeholder='City', value='#{userCity}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td Province *:
                            td
                                input(id='userProvince', type='text', placeholder='Province', value='#{userProvince}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td ZIP Code *:
                            td
                                input(id='userZipCode', type='text', placeholder='ZIP Code', value='#{userZipCode}',class='form-control', required autofocus, autocomplete="off")
                        tr
                            td
                                input#btnSubmitAccount(type="submit", value="Create Account",class="btn btn-lg btn-primary btn-block", disabled)
                            td
                else
                    table
                        tr
                            td Username *:
                            td
                                input(id='username',class='form-control' , type='text', placeholder='Username', required autofocus, autocomplete="off")
                        tr
                            td Password *:
                            td
                                input(id='userPassword',class='form-control', type='password', placeholder='Password', required autofocus, autocomplete="off")
                        tr
                            td Confirm Password *:
                            td
                                input(id='confirmPassword', type='password', placeholder='Confirm Password', class='form-control', required autofocus, autocomplete="off")
                        tr
