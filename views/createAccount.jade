extends layout
block content
    include Header




    h2 Create Account
    br
    p Please fill the fields to create your account.

    if account

        form(name="account", action="/createAccount/confirmAccount", method="post")
            br
            | Username :
            input(name='username', type='text', placeholder='Username', value='#{username}',class='form-control', required autofocus)
            | Password :
            input(name='userPassword', type='password', placeholder='Password', value='#{userPassword}',class='form-control', required autofocus)

            br
            | First Name :
            input(name='userFirstName', type='text', placeholder='First Name', value='#{userFirstName}',class='form-control', required autofocus)
            | Last Name :
            input(name='userSecondName', type='text', placeholder='Last Name', value='#{userSecondName}',class='form-control', required autofocus)
            | Birth Date :
            input(name='userBirthDate', type='text', placeholder='YYYY-MM-DD', value='#{userBirthDate}',class='form-control', required autofocus)

            br
            | Email :
            input(name='userEmail', type='text', placeholder='Email', value='#{userEmail}',class='form-control', required autofocus)
            | Phone Number :
            input(name='userPhoneNumber', type='text', placeholder='###-###-####', value='#{userPhoneNumber}',class='form-control', required autofocus)

            br
            | Civic No. :
            input(name='userCivicNumber', type='text', placeholder='Civic No.', value='#{userCivicNumber}',class='form-control', required autofocus)
            | Appartment :
            input(name='userAppNumber', type='text', placeholder='App. No. (Optional)', value='#{userAppNumber}',class='form-control', required autofocus)
            | Street :
            input(name='userStreet', type='text', placeholder='Street', value='#{userStreet}',class='form-control', required autofocus)
            | City :
            input(name='userCity', type='text', placeholder='City', value='#{userCity}',class='form-control', required autofocus)
            | Province :
            input(name='userProvince', type='text', placeholder='Province', value='#{userProvince}',class='form-control', required autofocus)
            | ZIP Code :
            input(name='userZipCode', type='text', placeholder='ZIP Code', value='#{userZipCode}',class='form-control', required autofocus)

            br
            input#btnSubmitAccount(type="submit", value="Create Account",class="btn btn-lg btn-primary btn-block")
    else
        form(name="account", action="/createAccount/confirmAccount", method="post")
            br
            | Username :
            input(name='username',class='form-control' , type='text', placeholder='Username', required autofocus)
            | Password :
            input(name='userPassword',class='form-control', type='password', placeholder='Password', required autofocus)
            br
            | First Name :
            input(name='userFirstName',class='form-control', type='text', placeholder='First Name', required autofocus)
            | Last Name :
            input(name='userSecondName',class='form-control', type='text', placeholder='Last Name', required autofocus)
            | Birth Date :
            input(name='userBirthDate',class='form-control', type='text', placeholder='YYYY-MM-DD', required autofocus)
            br
            | Email :
            input(name='userEmail',class='form-control', type='text', placeholder='Email', required autofocus)
            | Phone Number :
            input(name='userPhoneNumber',class='form-control', type='text', placeholder='###-###-####', required autofocus)
            br
            | Civic No. :
            input(name='userCivicNumber',class='form-control', type='text', placeholder='Civic No.', required autofocus)
            | Appartment :
            input(name='userAppNumber',class='form-control', type='text', placeholder='App. No.(Optionnal)', required autofocus)
            | Street :
            input(name='userStreet',class='form-control', type='text', placeholder='Street', required autofocus)
            | City :
            input(name='userCity',class='form-control', type='text', placeholder='City', required autofocus)
            | Province :
            input(name='userProvince',class='form-control', type='text', placeholder='Province', required autofocus)
            | ZIP Code :
            input(name='userZipCode',class='form-control', type='text', placeholder='ZIP Code', required autofocus)
            br
            input#btnSubmitAccount(type="submit", value="Create Account", class="btn btn-lg btn-primary btn-block")



    script(src='/javascripts/validateAccountFields.js')
