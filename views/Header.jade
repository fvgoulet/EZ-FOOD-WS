header
    if account != null
        div#UserSalutation Hello, #{account.firstName} #{account.lastName}
        div#Logo
            a(href="/") Ez-Food
            div#Motto All the food at the tip of your finger!

        // Differents categories
        // admin - 0
        // entrepreneur -1
        // restaurateur -2
        // client - 3
        // livreur - 4
        - var account_category = account.category
        case account_category
            when 0
                nav
                    ul
                        li
                            a(href='/accountManagement') Account Management
                        li
                            a(href="/disconnect") Disconnect
            when 1
                nav
                    ul
                        li
                            a#btnRestaurant(onClick="listRestaurant();") Restaurant
                        li
                            a#btnManageRestaurateur(onClick="manageRestaurateur();") Restaurateur(s)
                        li
                            a#btnModifyAccount(onClick="modifyAccount();") Modify Account
                        li
                            a(href="/disconnect") Disconnect
            when 2
                nav
                    ul
                        li
                            a(onClick="showOrderManagement();") Orders Management
                        li
                            a#btnModifyAccount(onClick="modifyAccount();") Modify Account
                        li
                            a(href="/disconnect") Disconnect
            when 3
                nav
                    ul
                        li
                            a#btnModifyAccount(onClick="modifyAccount();") Modify Account
                        li
                            a(href="/disconnect") Disconnect
            when 4
                nav
                    ul
                        li
                            a#btnDemandeLivraison(onClick="demandeLivraison();") Demande de livraison
                        li
                            a#btnModifyAccount(onClick="modifyAccount();") Modify Account
                        li
                            a(href="/disconnect") Disconnect
            default
                nav
                    ul
                        li
                            a(href="/disconnect") Disconnect
    else
        div#Logo
            a(href='/') Ez-Food
            div#Motto All the food at the tip of your finger!
        nav
            ul
                li
                    a#btnCreateAccount(onClick="createAccount();") Create Account
                li
                    a#btnSignIn(onClick="signIn();") Sign In
