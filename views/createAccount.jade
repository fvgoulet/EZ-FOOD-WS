                        tr
                            td Email *:
                            td
                                input(id='userEmail',class='form-control', type='text', placeholder='Email', required autofocus, autocomplete="off")
                        tr
                            td Phone Number *:
                            td
                                input(id='userPhoneNumber',class='form-control', type='text', placeholder='###-###-####', required autofocus, autocomplete="off")
                        tr
                            td Civic No. *:
                            td
                                input(id='userCivicNumber',class='form-control', type='text', placeholder='Civic No.', required autofocus, autocomplete="off")
